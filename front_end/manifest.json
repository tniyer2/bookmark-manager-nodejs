
{
	"manifest_version": 2,
	"short_name": "Bookmark Manager",
	"name": "Bookmark Manager",
	"version": "1.0.1",
	"minimum_chrome_version": "63",

	"description": "Bookmark sites, images, and videos to a gallery. Supports downloading videos from most sites.",
	"icons": {
		"16": "icons/icon.png",
		"48": "icons/icon.png",
		"128": "icons/icon.png"
	},

	"permissions": [ "activeTab", 
					 "storage",
					 "contextMenus",
					 "downloads" ],
	"background": {
		"scripts": [ "js/utility.js",
					 "js/apiUtility.js",
					 "js/metaUtility.js",
					 "js/data.js", 
					 "js/background.js" ],
		"persistent": false
	},
	"content_scripts": [{
     	"matches": ["<all_urls>"],
    	"js": ["js/scanner.js"]
   	}],
    "browser_action": {
    	"default_title": "Bookmark Manager" },
    "web_accessible_resources": ["html/popup.html"]
}
