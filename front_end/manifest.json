{
	"name": "Tagger Plus",
	"version": "0.5.0",
	"manifest_version": 2,

	"icons": 
	{
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},

	"permissions": [ "nativeMessaging",
					 "downloads",
					 "contextMenus",
					 "tabs",
					 "activeTab", 
					 "storage" ],
	"background": 
	{
		"scripts": [ "js/utility.js",
					 "js/data.js", 
					 "js/background.js" ],
		"persistent": false
	},
	"content_scripts": [{
     	"matches": ["<all_urls>"],
    	"js": ["js/scanner.js"]
   	}],
    "browser_action":
    {

    },
    "web_accessible_resources": 
    [
    	"html/popup.html",
    	"css/content.css"
    ]
}
