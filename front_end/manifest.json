
{
	"manifest_version": 2,
	"name": "Tagger Plus",
	"version": "0.5.0",

	"description": "Chrome extension for saving and tagging pictures and videos.",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},

	"permissions": [ "activeTab", 
					 "storage",
					 "contextMenus",
					 "downloads" ],
	"optional_permissions": ["nativeMessaging"],
	"background": {
		"scripts": [ "js/utility.js",
					 "js/metaUtility.js",
					 "js/data.js", 
					 "js/background.js" ],
		"persistent": false
	},
	"content_scripts": [{
     	"matches": ["<all_urls>"],
    	"js": ["js/scanner.js"]
   	}],
    "browser_action": {
    	"default_title": "tagger-plus" },
    "options_page": "html/settings.html",
    "web_accessible_resources": ["html/popup.html"]
}
